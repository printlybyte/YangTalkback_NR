<?xml version="1.0" encoding="UTF-8"?>  
<!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->  
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">  
    <item>  
        <shape>  
            <solid android:color="#E3F3FF" />  
            <corners android:topLeftRadius="4dp" android:topRightRadius="4dp"  
                android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp" />  
            <stroke android:width="1dp" android:color="#ffAAAAAA" />  
        </shape>  
    </item>  
    <item android:right="1dp" android:top="1dp"  android:left="1dp"  android:bottom="1dp"  >  
        <shape>  
            <solid android:color="#E3F3FF" />  
            <corners android:topLeftRadius="4dp" android:topRightRadius="4dp"  
                android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp" />  
            <stroke android:width="1dp" android:color="#ffffffff" />  
        </shape>  
    </item>  
</layer-list>  
